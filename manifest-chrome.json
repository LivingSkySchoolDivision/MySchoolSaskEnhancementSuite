{
  "manifest_version": 2,
  "name": "MySchoolSask Enhancement Suite",
  "version": "0.2",

  "description": "Adds enhancements to MySchoolSask. Only useful if you already have access to MySchoolSask.",

  "content_scripts": [
    {
      "matches": ["*://*.myschoolsask.com/aspen/*"],
      "js": ["jquery-3.3.1.min.js", "myschoolsask.com.js"]
    }
  ],
  "icons": {
    "48": "img/msst_48.png",
    "96": "img/msst_96.png"
  },
  "options_ui": {
    "page": "options.html"
  },  
  "permissions": ["storage"]
}