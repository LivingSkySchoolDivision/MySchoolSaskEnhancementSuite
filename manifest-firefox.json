{
  "manifest_version": 2,
  "name": "MySchoolSask Enhancement Suite",
  "version": "0.4.3",

  "description": "Adds enhancements to MySchoolSask. Only useful if you already have access to MySchoolSask.",

  "background": {
    "scripts": ["/js/background.js"]
  },
  "content_scripts": [
    {
      "matches": ["*://*.myschoolsask.com/aspen/*"],
      "js": ["/lib/jquery-3.3.1.min.js", "/js/myschoolsask.com.js"]
    }
  ],
  "icons": {
    "48": "img/msst_48.png",
    "96": "img/msst_96.png"
  },
  "options_ui": {
    "page": "/pages/options.html",
    "browser_style": true,
    "open_in_tab": true

  },
  "permissions": ["storage"],
  "applications": {
    "gecko": {
      "id": "myschoolsaskenhancemensuite@lskysd.ca"
    }
  }
}